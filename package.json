{
  "name": "clean-node-api",
  "version": "1.0.0",
  "main": "index.js",
  "repository": "https://github.com/jonashenrique90/clean-node-api.git",
  "author": "jonashenrique90 <jonas.herique90@gmail.com>",
  "license": "MIT",
  "scripts": {
    "test": "jest --watch --silent --colors --noStackTrace",
    "test:staged": "jest --passWithNoTests --findRelatedTests --silent --noStackTrace",
    "test:ci": "jest --coverage"
  },
  "standard": {
    "env": ["jest"]
  },
  "lint-staged": {
    "*.js": [
      "standard --fix",
      "yarn test:staged",
      "git add"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "pre-push": "yarn test:ci"
    }
  },
  "devDependencies": {
    "husky": "^4.3.8",
    "jest": "^26.6.3",
    "lint-staged": "^10.5.4",
    "standard": "^16.0.3"
  }
}
